    "swagger-ui-express": "^4.6.2",
    "swagger-jsdoc": "^6.2.8",
    "express-openapi-validator": "^5.0.4",
    "prometheus-api-metrics": "^3.2.2",
    "prom-client": "^14.2.0",
    "elastic-apm-node": "^3.45.1",
    "@elastic/elasticsearch": "^8.7.0",
    "geoip-lite": "^1.4.7",
    "maxmind": "^4.3.6",
    "yara": "^1.0.3",
    "clamav.js": "^0.18.0",
    "virustotal-api": "^1.1.0",
    "node-cache": "^5.1.2",
    "lru-cache": "^9.1.1",
    "bull": "^4.10.4",
    "agenda": "^4.3.0",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
