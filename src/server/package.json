    "sanitize-html": "^2.10.0",
    "dompurify": "^3.0.2",
    "jsdom": "^22.0.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^20.1.2",
    "playwright": "^1.33.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/morgan": "^1.9.4",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.7",
    "@types/lodash": "^4.14.194",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.17",
    "@types/mime-types": "^2.1.1",
    "@types/sanitize-html": "^2.9.0",
    "@types/dompurify": "^3.0.2",
    "@types/jsdom": "^21.1.1",
    "@types/cheerio": "^0.22.31",
    "@types/ws": "^8.5.4",
    "@types/node-cron": "^3.0.7",
    "@types/archiver": "^5.3.2",
    "@types/tar": "^6.1.4",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.1",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.0.4",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.3",
    "eslint": "^8.39.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "typedoc": "^0.24.6",
    "snyk": "^1.1143.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "cross-env": "^7.0.3",
    "concurrently": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/erdps/erdps-server.git"
  },
  "bugs": {
    "url": "https://github.com/erdps/erdps-server/issues"
  },
  "homepage": "https://github.com/erdps/erdps-server#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node src/index.ts"
  }
}